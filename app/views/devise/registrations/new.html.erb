<div class="center"><h2>Sign up</h2></div>
<div class= "container">
 <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
       <div class="form-group">
          <%= f.label :Username%>
          <%= f.input :username, label: false, placeholder: 'username', input_html: {class: 'form-control'}  %>
       </div>
       <div class="form-group">
          <%= f.label :email%>
          <%= f.input :email, label: false, placeholder: 'user@domain.com', input_html: {class: 'form-control'}  %>
       </div>
       <div class="form-group">
          <%= f.label :Password%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.input :password,label: false , input_html: {class: 'form-control'} %>
       </div>
       <div class="form-group">
          <%= f.label :Password%>
          <%= f.input :password_confirmation, label: false , input_html: {class: 'form-control'}  %>
       </div>
       <div class="actions">
          <%= f.button :submit ,class:'btn btn-primary'%>
       </div>
    <% end %>
   </div>
</div>
<%= render "devise/shared/links" %>